{
  "name": "courtesy-inspection-server",
  "version": "1.0.0",
  "description": "API server for Courtesy Inspection MVP - Digital Vehicle Inspection Platform",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:debug": "tsx --inspect watch src/server.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:security": "jest --testPathPattern=security",
    "test:performance": "artillery run tests/performance/load.test.yml",
    "lint:security": "eslint . --ext .ts --config .eslintrc.security.js",
    "db:migrate": "node -e \"const db = require('./templates/db'); db().runMigrations().then(() => process.exit(0)).catch(e => { console.error(e); process.exit(1); })\"",
    "db:health": "node -e \"const { DatabaseUtils } = require('./dist/utils/database'); DatabaseUtils.healthCheck().then(h => { console.log(h); process.exit(0); }).catch(e => { console.error(e); process.exit(1); })\"",
    "db:maintenance": "node -e \"const { DatabaseUtils } = require('./dist/utils/database'); DatabaseUtils.runMaintenance().then(m => { console.log(m); process.exit(0); }).catch(e => { console.error(e); process.exit(1); })\"",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "vehicle-inspection",
    "api",
    "railway",
    "postgresql",
    "typescript",
    "express"
  ],
  "author": "Courtesy Inspection",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "artillery": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/courtesy-inspection.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/courtesy-inspection/issues"
  },
  "homepage": "https://github.com/your-org/courtesy-inspection#readme"
}